---
import { Icon } from "astro-icon/components";
import type { LocalImageProps } from "astro:assets";
import { Image } from "astro:assets";

interface Props {
  src: LocalImageProps["src"];
  alt: string;
  href: string;
  appStoreUrl?: string;
  googlePlayUrl?: string;
}

const { src, alt, href, appStoreUrl, googlePlayUrl } = Astro.props;
---

<div class="group relative">
  <a href={href} target="_blank" rel="noopener noreferrer" class="block">
    <Image
      src={src}
      alt={alt}
      class="size-14 rounded-lg object-contain sm:size-16"
    />
  </a>

  {
    (appStoreUrl || googlePlayUrl) && (
      <div class="absolute top-full left-1/2 mt-2 flex -translate-x-1/2 transform gap-4 sm:opacity-0 transition-all sm:group-hover:opacity-100">
        {appStoreUrl && (
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="transition-transform hover:scale-110"
          >
            <Icon name="simple-icons:appstore" class="text-lg" />
          </a>
        )}
        {googlePlayUrl && (
          <a
            href={googlePlayUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="transition-transform hover:scale-110"
          >
            <Icon name="simple-icons:googleplay" class="text-lg" />
          </a>
        )}
      </div>
    )
  }
</div>
